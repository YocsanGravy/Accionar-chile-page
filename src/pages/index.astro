---
import { Hero } from "@modules/Hero";
import { CoverHero } from "../modules/CoverHero/CoverHero";
import Layout from "../layouts/Layout.astro";
import { LogosSlider } from "@modules/LogosSlider";
import { LeadTexts } from "@modules/LeadTexts";
import { Team } from "../modules/Team/Team"; 
import { Container } from "@components/Container";
import { Modal } from "../modules/Modal/Modal";
import { BoxOffers } from "@modules/BoxOffers";
import { ContentSection } from "@modules/ContentSection";
import { FadeIn } from "@utils/animations/FadeIn";
import { Contact } from "@modules/Contact";
import HeroImage from "@static/images/hero-img.webp?url";

// 🔹 Importamos los iconos para los servicios
import { FaUserGraduate, FaUsers, FaBriefcase, FaMicrophone, FaBuilding, FaHeart, FaHandHoldingHeart, FaChalkboardTeacher, FaPiggyBank } from "react-icons/fa";

const services = [
    {
        icon: "FaUserGraduate",
        title: "Coaching para adolescentes",
        description: "Acompañamiento y desarrollo personal para potenciar habilidades...",
    },
    {
        icon: "FaUsers",
        title: "Escuela para padres",
        description: "Herramientas efectivas para fortalecer la comunicación...",
    },
    {
        icon: "FaBriefcase",
        title: "Coaching para emprendedores",
        description: "Estrategias y mentoría para impulsar negocios...",
    },
    {
        icon: "FaMicrophone",
        title: "Eventos con conferencistas",
        description: "Organización de eventos exclusivos con expertos...",
    },
    {
        icon: "FaBuilding",
        title: "Coaching para empresas",
        description: "Capacitación y desarrollo de equipos...",
    },
    {
        icon: "FaHandHoldingHeart",
        title: "Coaching para la tercera edad",
        description: "Acompañamiento para fortalecer el bienestar...",
    },
    {
        icon: "FaHeart",
        title: "Coaching para parejas",
        description: "Mejora de la comunicación y fortalecimiento del vínculo...",
    },
    {
        icon: "FaChalkboardTeacher",
        title: "Escuela para entrenadores",
        description: "Formación para futuros coaches profesionales...",
    },
    {
        icon: "FaPiggyBank",
        title: "Talleres de Inteligencia Financiera",
        description: "Estrategias prácticas para una gestión financiera efectiva...",
    },
];

---

<style>
.hero-separator {
    width: 100%;
    height: 1px; /* 🔹 Línea delgada para un aspecto minimalista */
    background: #e0e0e0; /* 🔹 Color sólido y suave */
    margin: 40px 0; /* 🔹 Espaciado equilibrado */
    border: none; /* 🔹 Elimina cualquier borde por defecto */
}


</style>

<Layout title="Accionar Chile" description="Red Colaborativa">
    <main class="page-content">
        <Modal client:load/>
        <CoverHero
            title="Accionar Chile <span style='color: #ff8601;'>Coaching</span> que impulsa tu éxito."
            paragraph="¡Conecta con Tu Poder! y Vive en Tu Máxima posibilidad!"
            buttons={[
                { link: "#Contacto", text: "Contáctanos", variant: "secondary" },
                { link: "#Servicios", text: "Más Información", variant: "primary" },
            ]}
            image={HeroImage}
        />
        <LogosSlider client:load />

        <div id="Servicios">
            <!-- 🔹 Aquí usamos la nueva versión de LeadTexts con tarjetas -->
            <LeadTexts client:load title="Nuestros Servicios" services={services} />
        </div>

        
        <Team client:load />

        <div class="hero-separator"></div>

        <div id="Servici">
            <Container>
                <FadeIn client:visible>
                    <h2>¿Por qué elegirnos?</h2>
                </FadeIn>
            </Container>
            <BoxOffers
                client:load
                boxes={[
                    {
                        content: `
                        <h2>Coaching con propósito</h2>
                        <p>Te guiamos en un proceso de transformación real y significativo.</p>
                        `,
                    },
                    {
                        content: `
                        <h2>Herramientas prácticas</h2>
                        <p>Técnicas aplicables a tu vida diaria para potenciar tu desarrollo.</p>
                        `,
                    },
                    {
                        content: `
                        <h2>Acompañamiento continuo</h2>
                        <p>No estás solo en este camino; formamos parte de tu evolución.</p>
                        `,
                    },
                ]}
            />
        </div>

        <div class="hero-separator"></div>
        <div id="Contacto"><Contact client:load /></div>
    </main>
</Layout>
